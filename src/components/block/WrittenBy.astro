---
import clsx from 'clsx';
import {Image} from 'astro:assets'
import AntoinePortrait from '../../assets/antoine-bourchardy.png';

interface Props {
  class?: string
}

const props = Astro.props;
---

<div class={clsx("flex flex-col gap-8 sm:gap-10 @sm:flex-row @sm:items-center", props.class)}>
    <Image src={AntoinePortrait} alt="Portrait Antoine Bouchardy" class="block mx-auto sm:mx-0 @sm:size-25" width={164} height={164}/>
    <div class="flex flex-col gap-2">
        <div class="text-xs font-medium">
            Written by Antoine Bouchardy
        </div>
        <div class="text-xs text-muted-foreground">
            <a href="https://www.linkedin.com/in/antoinebouchardy/" class="text-success">Antoine Bouchardy</a> is the CEO and co-founder of Probo, on a mission to make compliance simple and startup-friendly. He writes about the challenges founders face balancing growth with regulation. When he’s not building Probo, you’ll find him cycling or tinkering with open-source projects.
        </div>
    </div>
</div>
