---
import {Image} from "astro:assets";
import Logo from '../assets/probo-logo.svg'
import Frameworks from './block/Frameworks.astro'

const menus = [
  {
    label: 'Resources', items: [
      {label: 'Home', href: '/'},
      {label: 'Blog', href: '/blog'},
      {label: 'FAQs', href: '/faqs'},
    ]
  }, {
    label: 'Company', items: [
      {label: 'About', href: '/about'},
      {label: 'Careers', href: '/careers'},
    ],
  }, {
    label: 'Legal', items: [
      {label: 'Cookie Policy', href: '/cookie-policy'},
      {label: 'Privacy Policy', href: '/privacy'},
      {label: 'Terms of service', href: '/terms'},
      {label: 'Subprocessors', href: '/subprocessors'},
    ],
  }
]
---

<Frameworks/>

<footer class="bg-level-0 py-10">
    <div class="container flex flex-col-reverse gap-8 sm:grid grid-cols-[510fr_560fr]">
        <div class="space-y-4 text-tertiary-foreground">
            <Image src={Logo} alt="Logo probo" width={73} height={20} class="opacity-50"/>
            <p class="">
                Forget compliance,<br/>
                focus on your business.
            </p>
            <p class="text-xxs sm:mt-16">
                Copyright Â© {new Date().getFullYear()} Probo. All rights reserved.
            </p>
        </div>
        <div class="grid grid-cols-2 text-xs gap-6 sm:grid-cols-3">
          {menus.map((menu) => (
            <div class="space-y-3">
              <div class="font-medium mb-3">{menu.label}</div>
              <ul class="space-y-3">
                {menu.items.map((item) => (
                        <li>
                            <a href={item.href} class="text-sm text-tertiary-foreground hover:text-white hover:underline">{item.label}</a>
                        </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
    </div>
</footer>
