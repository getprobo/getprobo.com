---
import Layout from '../layouts/Layout.astro';
import YCombinator from '../assets/ycombinator.png'
import {Image} from 'astro:assets';
import AnimatedHero from "../components/ui/AnimatedHero.astro";
import Button from "../components/ui/Button.astro";
import Badges from "../components/Badges.svelte";
import Logos from "../components/block/Logos.astro";
import Testimonials from "../components/block/Testimonials.astro";
import SaleArg from "../components/ui/SaleArg.astro";


import TrustImage from '../assets/app/trust.png';
import SlackImage from '../assets/app/slack.png';
import OpenSource from "../components/block/OpenSource.astro";
import Stories from "../components/block/Stories.astro";

---

<Layout title="Probo - Compliance for Startups in One Week" description="Get SOC 2, GDPR, HIPAA, and ISO certified in just one week. Open-source compliance management platform with no vendor lock-in. Backed by Y Combinator.">
    <AnimatedHero>
        <a href="/yc" class="w-max mx-auto py-2 px-4 yc-btn text-muted-foreground flex gap-2 items-center mb-6 sm:mb-8">
            Backed by
            <Image src={YCombinator} alt="Logo YCombinator" width={77} height={15}/>
        </a>
        <h1 class="text-h2 sm:text-h1 font-medium text-center text-balance mb-6 sm:mb-8">
            From Chaos to Compliance — in a few weeks.
        </h1>
        <p class="text-lg text-muted-foreground text-balance text-center max-w-100 mx-auto mb-6 sm:mb-8">
            Ensure your business meets every standard without slowing down your growth.
        </p>
        <div class="flex items-center gap-3 justify-center mb-10 sm:mb-12">
            <Button variant="secondary" size="lg" href="https://github.com/getprobo/getprobo.com">Open-source</Button>
            <Button size="lg" href="https://hexacc.typeform.com/getstarted">Get certified</Button>
        </div>
        <Badges count={5} countMobile={3} client:load class="grid grid-cols-3 sm:grid-cols-5 gap-2 sm:gap-10"/>
    </AnimatedHero>

    <Logos/>

    <Testimonials/>

    <section class="my-20 sm:mt-40 container">
        <h2 class="text-h3 sm:text-h2 mb-3 font-medium text-center intersect-once intersect:animate-slide-in">
            Make compliance effortless
        </h2>
        <p class="text-lg text-muted-foreground text-center intersect-once intersect:animate-slide-in motion-delay-100">
            We turn complexity into clarity.
        </p>

        <SaleArg class="my-10" title="Your dedicated compliance expert" >
          <p>
              Get matched with a certified compliance officer who works as part of your team.
          </p>
        </SaleArg>

        <SaleArg class="my-10" title="Compliance that runs in the background" >
            <p>
                Compliance doesn’t have to slow you down. Probo automates evidence collection, manages approvals, and coordinates with auditors — all without interrupting your workflow.
            </p>
        </SaleArg>

        <SaleArg class="my-10" title="Built to earn entreprise trust" image={TrustImage}>
            <p>
                Get the frameworks that open doors to enterprise deals — SOC 2, ISO 27001, GDPR.
            </p>
            <p>
                Create a live Trust Center, share audit reports securely, and prove your security posture instantly.
            </p>
        </SaleArg>

        <SaleArg class="my-10" title="Get stuff done on Slack" image={SlackImage}>
            <p>
                Everything happens where you already work.
            </p>
            <p>Approve policies, review evidence, and complete tasks — all from Slack.
            </p>
        </SaleArg>

    </section>
    <OpenSource/>

    <Stories/>

</Layout>

