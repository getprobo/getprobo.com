---
import Layout from "../layouts/Layout.astro";
import YCombinator from "../assets/ycombinator.png";
import { Image } from "astro:assets";
import AnimatedHero from "../components/ui/AnimatedHero.svelte";
import Button from "../components/ui/Button.astro";
import Badges from "../components/Badges.svelte";
import Logos from "../components/block/Logos.astro";
import Testimonials from "../components/block/Testimonials.astro";
import SaleArg from "../components/ui/SaleArg.astro";

import TrustImage from "../assets/app/trust.png";
import SlackImage from "../assets/app/slack.png";
import OpenSource from "../components/block/OpenSource.astro";
import Stories from "../components/block/Stories.astro";
import ComplianceTrack from "../components/block/ComplianceTrack.svelte";
---

<Layout
  title="Probo - Compliance for Startups in One Week"
  description="Get SOC 2, GDPR, HIPAA, and ISO certified in just one week. Open-source compliance management platform with no vendor lock-in. Backed by Y Combinator."
>
  <AnimatedHero client:load class="py-10 sm:py-20">
    <a
      href="/yc"
      class="yc-btn text-muted-foreground mx-auto mb-6 flex w-max items-center gap-2 px-4 py-2 sm:mb-8"
    >
      Backed by
      <Image src={YCombinator} alt="Logo YCombinator" width={77} height={15} />
    </a>
    <h1
      class="text-h2 sm:text-h1 mb-6 text-center font-medium text-balance sm:mb-8"
    >
      From Chaos to Compliance — in a few weeks.
    </h1>
    <p
      class="text-muted-foreground mx-auto mb-6 max-w-100 text-center text-lg text-balance sm:mb-8"
    >
      Ensure your business meets every standard without slowing down your
      growth.
    </p>
    <div class="mb-10 flex items-center justify-center gap-3 sm:mb-12">
      <Button
        variant="secondary"
        size="lg"
        href="https://github.com/getprobo/getprobo.com">Open-source</Button
      >
      <Button size="lg" href="https://hexacc.typeform.com/getstarted"
        >Get certified</Button
      >
    </div>
    <Badges
      count={5}
      countMobile={3}
      client:load
      class="grid grid-cols-3 gap-2 sm:grid-cols-5 sm:gap-10"
    />
  </AnimatedHero>

  <Logos />

  <ComplianceTrack client:visible />

  <section class="container py-10 sm:py-20">
    <h2
      class="text-h3 sm:text-h2 intersect-once intersect:animate-slide-in mb-3 text-center font-medium"
    >
      Make compliance effortless
    </h2>
    <p
      class="text-muted-foreground intersect-once intersect:animate-slide-in motion-delay-100 mb-10 text-center text-lg sm:mb-12"
    >
      We turn complexity into clarity.
    </p>

    <div
      class="flex grid-cols-2 flex-col items-start gap-10 sm:grid sm:gap-x-20 sm:gap-y-12"
    >
      <SaleArg title="Your dedicated compliance expert" image={TrustImage}>
        <p>
          Get matched with a certified compliance officer who works as part of
          your team.
        </p>
      </SaleArg>

      <SaleArg
        title="Compliance that runs in the background"
        image={TrustImage}
      >
        <p>
          Probo automates collection, approvals, and audits — without
          interrupting your flow.
        </p>
      </SaleArg>

      <SaleArg title="Built to earn entreprise trust" image={TrustImage}>
        <p>
          Create a live Trust Center, share audit reports securely, and prove
          your security posture instantly.
        </p>
      </SaleArg>

      <SaleArg title="Get stuff done on Slack" image={SlackImage}>
        <p>
          Get the frameworks that open doors to enterprise deals — SOC 2, ISO
          27001, GDPR.
        </p>
      </SaleArg>
    </div>
  </section>

  <Testimonials />

  <OpenSource />

  <Stories />
</Layout>

